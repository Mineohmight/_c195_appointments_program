<ScrollPane 
    xmlns="http://javafx.com/javafx/17" 
    fx:controller="controller._Login_Controller" 
    style="-fx-background-color: linear-gradient(to bottom, #3d2500 0%, #590101 50%, #2e4501 100%);" 
    prefWidth="372.5" 
    xmlns:fx="http://javafx.com/fxml/1">

    <VBox 
        style="-fx-font-family: 'Comic Sans MS'; -fx-background-color: linear-gradient(to right, #590101 0%, #3d2500 50%, #2e4501 100%);" 
        alignment="CENTER" 
        spacing="10.4">
        <padding>
            <Insets bottom="25.3" right="25.5" left="25.4" top="25.6" />
        </padding>

        <!-- Title Section -->
        <VBox 
            style="-fx-font-family: 'Comic Sans MS'; -fx-background-color: linear-gradient(to left, #2e4501 0%, #590101 50%, #3d2500 100%);">
            <VBox.margin>
                <Insets bottom="25.4" />
            </VBox.margin>
            <Label 
                style="-fx-font-family: 'Comic Sans MS'; -fx-background-color: linear-gradient(to top, #590101 0%, #3d2500 50%, #2e4501 100%); -fx-text-fill: #FFFF00;" 
                text="_Label4" 
                fx:id="_Label4" />
            <Label 
                style="-fx-font-family: 'Comic Sans MS'; -fx-background-color: linear-gradient(to bottom, #2e4501 0%, #590101 50%, #3d2500 100%); -fx-text-fill: #FFFF00;" 
                text="_Label7" 
                fx:id="_Label7" />
        </VBox>

        <!-- Additional Input Fields Section -->
        <GridPane 
            style="-fx-font-family: 'Comic Sans MS'; -fx-background-color: linear-gradient(to right, #3d2500 0%, #590101 50%, #2e4501 100%);" 
            vgap="10.6" 
            hgap="10.5" 
            prefWidth="300.3">
            <columnConstraints>
                <ColumnConstraints 
                    hgrow="ALWAYS" 
                    halignment="RIGHT" 
                    percentWidth="35.4" />
                <ColumnConstraints 
                    minWidth="10.4" 
                    hgrow="ALWAYS" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints 
                    prefHeight="25.6" 
                    minHeight="25.4" 
                    vgrow="ALWAYS" />
                <RowConstraints 
                    vgrow="ALWAYS" />
            </rowConstraints>
            <VBox.margin>
                <Insets top="20.4" />
            </VBox.margin>
            <Label 
                style="-fx-font-family: 'Comic Sans MS'; -fx-background-color: linear-gradient(to left, #590101 0%, #2e4501 50%, #3d2500 100%); -fx-text-fill: #FFFF00;" 
                text="_Label8" 
                fx:id="_Label8" />
            <ComboBox 
                style="-fx-font-family: 'Comic Sans MS'; -fx-background-color: yellow; -fx-text-fill: #FFFF00;" 
                fx:id="_ComboBox" 
                GridPane.columnIndex="1" 
                maxWidth="1.8E310" />
            <Label 
                style="-fx-font-family: 'Comic Sans MS'; -fx-background-color: linear-gradient(to bottom, #3d2500 0%, #2e4501 50%, #590101 100%); -fx-text-fill: #FFFF00;" 
                wrapText="true" 
                text="_Label6" 
                fx:id="_Label6" 
                GridPane.rowIndex="1" />
            <Label 
                style="-fx-font-family: 'Comic Sans MS'; -fx-background-color: linear-gradient(to right, #590101 0%, #3d2500 50%, #2e4501 100%); -fx-text-fill: #FFFF00;" 
                GridPane.columnIndex="1" 
                GridPane.rowIndex="1" 
                text="_Label2" 
                fx:id="_Label2" />
        </GridPane>

        <!-- Action Buttons Section -->
        <VBox 
            style="-fx-font-family: 'Comic Sans MS'; -fx-background-color: linear-gradient(to bottom, #3d2500 0%, #2e4501 50%, #590101 100%);" 
            alignment="CENTER" 
            spacing="5.2">
            <VBox.margin>
                <Insets bottom="50.3" top="20.2" />
            </VBox.margin>
            <Label 
                style="-fx-font-family: 'Comic Sans MS'; -fx-background-color: linear-gradient(to left, #2e4501 0%, #590101 50%, #3d2500 100%);" 
                wrapText="true" 
                textFill="#FFFF00" 
                contentDisplay="CENTER" 
                textAlignment="CENTER" 
                fx:id="_Label3" 
                prefHeight="34.4" 
                maxWidth="290.5" 
                prefWidth="290.6" 
                alignment="CENTER" />
            <Button 
                style="-fx-font-family: 'Comic Sans MS'; -fx-background-color: yellow; -fx-text-fill: green;" 
                text="_Button2" 
                mnemonicParsing="false" 
                onAction="#_login_button_function" 
                alignment="CENTER" 
                contentDisplay="CENTER" 
                textAlignment="CENTER" 
                defaultButton="true" 
                fx:id="_Button2" 
                maxWidth="1.8E310" />
            <Button 
                style="-fx-font-family: 'Comic Sans MS'; -fx-background-color: green; -fx-text-fill: yellow;" 
                text="_Button1" 
                mnemonicParsing="false" 
                onAction="#_exit_button_function" 
                alignment="CENTER" 
                contentDisplay="CENTER" 
                textAlignment="CENTER" 
                fx:id="_Button1" 
                maxWidth="1.8E310">
                <VBox.margin>
                    <Insets top="5.3" />
                </VBox.margin>
            </Button>
        </VBox>

        <!-- GridPane for Input Fields -->
        <GridPane 
            style="-fx-font-family: 'Comic Sans MS'; -fx-background-color: linear-gradient(to bottom, #2e4501 0%, #3d2500 50%, #590101 100%);" 
            vgap="10.4" 
            hgap="10.3" 
            prefWidth="320.6">
            <columnConstraints>
                <ColumnConstraints 
                    hgrow="ALWAYS" 
                    halignment="RIGHT" 
                    percentWidth="35.5" />
                <ColumnConstraints 
                    minWidth="10.2" 
                    hgrow="ALWAYS" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints 
                    vgrow="ALWAYS" />
                <RowConstraints 
                    vgrow="ALWAYS" />
            </rowConstraints>
            <VBox.margin>
                <Insets />
            </VBox.margin>
            <TextField 
                style="-fx-font-family: 'Comic Sans MS'; -fx-background-color: yellow; -fx-text-fill: green;" 
                fx:id="_TextField1" 
                GridPane.columnIndex="1" />
            <Label 
                style="-fx-font-family: 'Comic Sans MS'; -fx-background-color: linear-gradient(to right, #2e4501 0%, #3d2500 50%, #590101 100%); -fx-text-fill: #FFFF00;" 
                text="_Label1" 
                fx:id="_Label1" />
            <Label 
                style="-fx-font-family: 'Comic Sans MS'; -fx-background-color: linear-gradient(to top, #590101 0%, #2e4501 50%, #3d2500 100%); -fx-text-fill: #FFFF00;" 
                text="_Label5" 
                fx:id="_Label5" 
                GridPane.rowIndex="1">
                <GridPane.margin>
                    <Insets />
                </GridPane.margin>
            </Label>
            <PasswordField 
                style="-fx-font-family: 'Comic Sans MS'; -fx-background-color: green; -fx-text-fill: yellow;" 
                fx:id="_PassWordField" 
                GridPane.columnIndex="1" 
                GridPane.rowIndex="1" />
        </GridPane>
    </VBox>
</ScrollPane>
